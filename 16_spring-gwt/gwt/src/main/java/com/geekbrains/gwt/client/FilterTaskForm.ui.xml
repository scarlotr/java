<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="filter" method="GET">
            <g:VerticalPanel spacing="10">
                <g:Label text="Фильтр"/>
                <g:HorizontalPanel>
                    <g:Label text="Name:" width="100px"/>
                    <g:TextBox name="name" ui:field="nameText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Owner:" width="100px"/>
                    <g:TextBox name="owner" ui:field="ownerText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Executor:" width="100px"/>
                    <g:TextBox name="executor" ui:field="executorText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Status:" width="100px"/>
                    <g:ListBox name="status" ui:field="status">
                        <g:item value="0">Все статусы</g:item>
                    </g:ListBox>
                </g:HorizontalPanel>
                <g:Button ui:field="btnSubmit">Применить</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>